<script type='text/vbscript'>
Sub Window_onLoad()
Me.ResizeTo 400,700
Me.MoveTo Screen.Width /2 - 200,Screen.Height / 2 - 350
//Call Delete_Wlan_list()
Call Wifi_Scan()
Call display()
End Sub

</script>

<script language="VBScript">

'Export available wi-fi networks
Sub Wifi_Scan()
Dim strCommand
strCommand = "%systemroot%\WLAN\wlan_list.bat" 
Set WSHShell = CreateObject("WScript.Shell")
WSHShell.Run "%comspec% cmd /c " & strCommand 
End Sub
</script>

<script type="text/javascript">
var filePath = "%systemroot\temp\wlan.txt"
xmlhttp = new XMLHttpRequest();
xmlhttp.open("GET",filePath,false);
xmlhttp.send(null);
var fileContent = xmlhttp.responseText;
var fileArray = fileContent.split('\n')
//Now do whatever you need with the array

document.getElementById("myWIFI").innerText = fileArray;}
</script>

</head>

<body scroll="no">

<p align="center"><img src=".\nhs_transp.png"/></p>
<h5>WLAN Wi-Fi Network Selector</h5>
<h2>Choose your Wi-Fi Network from the list below</h2>


<div id="myWIFI"></div>

<p align="center"><form>
<input type="button" style="background-color:FFA800;color:000000;border-color=FFA800" value="Close" onClick="window.close()">
</form></p>
</body>
